// Use MSYS2 MinGW64 as the default terminal profile

{
  "cmake.generator": "MinGW Makefiles",
  "cmake.configureSettings": {
    "CMAKE_PREFIX_PATH": "C:/msys64/mingw64",
    "CMAKE_C_COMPILER": "C:/msys64/mingw64/bin/gcc.exe",
    "CMAKE_CXX_COMPILER": "C:/msys64/mingw64/bin/g++.exe"
  },
  "terminal.integrated.profiles.windows": {
    "MSYS2 MinGW64": {
      "path": "C:\\msys64\\usr\\bin\\bash.exe",
      "args": ["-c", "cd /c/Project/Book-Reader && source /etc/profile && MSYSTEM=MINGW64 CHERE_INVOKING=1 exec bash --login"]
    }
  },
  "terminal.integrated.defaultProfile.windows": "MSYS2 MinGW64"
}
